{
  "manifest_version": 3,
  "name": "ChatGPT Query Tracker",
  "version": "1.0",
  "description": "Track how many queries you have sent to ChatGPT in the current session.",
  "permissions": ["storage", "activeTab", "webRequest"],
  "host_permissions": [ "*://chat.openai.com/*", "*://chatgpt.com/*" ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
